<Window
    x:Class="ShareX_windows.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:IconPack="using:MahApps.Metro.IconPacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShareX_windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid x:ConnectionId='2' x:Name="AppTitleBar" Background="Transparent">
            <Image
                Width="12"
                Height="12"
                Margin="8"
                HorizontalAlignment="Left"
                Source="Assets\Square44x44Logo.targetsize-24_altform-unplated.png" />
            <TextBlock x:ConnectionId='5'
                x:Name="AppTitleTextBlock"
                Margin="28,6"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="ShareX"
                TextWrapping="NoWrap" />
        </Grid>


        <NavigationView x:ConnectionId='3'
            x:Name="navBar"
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
                                                      >
            <NavigationView.Resources>
                <SolidColorBrush x:Key="NavigationViewContentBackground" Color="Transparent" />
                <SolidColorBrush x:Key="NavigationViewContentGridBorderBrush" Color="Transparent" />
            </NavigationView.Resources>

            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Photos"
                    FontSize="16"
                    Icon="BrowsePhotos"
                    Tag="0" />
                <NavigationViewItem
                    Content="File Transfer"
                    FontSize="16"
                    Icon="OpenFile"
                    Tag="1" />
                <NavigationViewItem
                    Content="Messages"
                    FontSize="16"
                    Icon="Message"
                    Tag="2" />
                <NavigationViewItem
                    Content="Notifications"
                    FontSize="16"
                    Icon="LeaveChat"
                    Tag="3" />
                <NavigationViewItem
                    Content="Call Logs"
                    FontSize="16"
                    Icon="Phone"
                    Tag="4" />
            </NavigationView.MenuItems>
            <Frame x:ConnectionId='4' x:Name="navFrame" Background="{x:Null}" />
        </NavigationView>






    </Grid>
</Window>

