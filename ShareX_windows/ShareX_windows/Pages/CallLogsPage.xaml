<Page x:Class="ShareX_windows.Pages.CallLogsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShareX_windows.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CallLogsPage">

    <Grid>
        <Border>
            <Border.Background>
                <LinearGradientBrush x:Name="LGB" EndPoint="0.1,0">
                    <GradientStop Color="Aquamarine" Offset="1"/>
                    <GradientStop Color="Transparent" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <StackPanel>
                <TextBox x:Name="tb" Width="100" Height="20" Text="dsdf"/>
                <Button Content="click" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
