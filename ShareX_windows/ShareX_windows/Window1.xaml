<Window x:Class="ShareX_windows.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:IconPack="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:ShareX_windows"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Window1" Height="720" Width="1080">


    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Height="100"/>
            
        <Border
            Grid.Row="1"
            CornerRadius="0 30 0 0"
            Background="#623ed0">

            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <Border Margin="0 -80 0 0 " Height="180" Width="100">
                        <Rectangle >
                            <Rectangle.Fill>
                                <ImageBrush Stretch="Uniform"  ImageSource="/mobile.png"/>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Border>
                    
                    <StackPanel  Height="auto" Margin="0 10 0 0">
                        <TextBlock x:Name="DeviceName" Text="Realme 3 pro" Style="{StaticResource phoneDetails}"/>
                        <TextBlock x:Name="connectionStatus" Text="Not connected" Style="{StaticResource phoneDetails}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"  Margin="10 5">
                            <IconPack:PackIconMaterial Margin="-10 0 0 0" Width="15" Height="15" Foreground="#d0c0ff" HorizontalAlignment="Left" VerticalAlignment="Center" Kind="Battery60" />
                            <TextBlock Text="60% " Margin=" 2  0 0 0"  Style="{StaticResource phoneDetails}"/>
                        </StackPanel>

                    </StackPanel>

                </StackPanel>
                <StackPanel>
                    <Border Margin="30" Background="White" Width="200" Height="1"/>

                    <ListBox 
                        BorderBrush="Transparent" 
                        x:Name="navBar" 
                        SelectionMode="Single" 
                        SelectionChanged="navBar_SelectionChanged" 
                        Background="Transparent">

                        <local:NavButton Navlink="/Pages/PhotosPage.xaml" Text="Photos" Icon="Image"/>

                        <local:NavButton Navlink="/Pages/FileTransferPage.xaml" Text="File Transfer" Icon="File"/>

                        <local:NavButton Navlink="/Pages/MessagesPage.xaml" Text="Message" Icon="Message"/>

                        <local:NavButton Navlink="/Pages/NotificationPage.xaml" Text="Notifications" Icon="Bell"/>

                        <local:NavButton Navlink="/Pages/CallLogsPage.xaml" Text="Call Logs" Icon="PhoneLog"/>


                    </ListBox>
                </StackPanel>
                

            </DockPanel>

        </Border>
        
        
        <Frame 
            Grid.Column="1" 
            Grid.Row="1" 
            x:Name="navFrame" 
            Background="Aqua"
            NavigationUIVisibility="Hidden"/>


    </Grid>
</Window>
