<Window x:Class="ShareX_windows.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShareX_windows"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        Title="Window2" Height="420" Width="400">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.ColumnSpan="2" Text="SCAN TO CONNECT" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
            <Border x:Name="closeBtn" Grid.Column="1" CornerRadius="3" Background="Red" Width="20" Height="20" Margin="5">
                <icon:PackIconMaterial HorizontalAlignment="Center" VerticalAlignment="Center" Kind="Close" Foreground="White" Background="{x:Null}" Padding="2"/>
            </Border>

        </Grid>
        <Image x:Name="QrImage" Height="400" Width="400"/>
    </StackPanel>
</Window>
