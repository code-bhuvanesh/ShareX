<UserControl
    x:Class="ShareX_windows.Views.FileTransferView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="using:ShareX_windows.customWigets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ShareX_windows.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Background="Transparent">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            Margin="40"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{StaticResource NavigationViewContentBackground}"
            CornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Stretch">
                    <TextBlock
                        Margin="10"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="SEND FILES" />
                </StackPanel>

                <ListView x:ConnectionId='4'
                    x:Name="sendFilesList"
                    Grid.Row="1"
                    VerticalAlignment="Stretch"
                    Background="{x:Null}"
                    BorderThickness="0" />
                <StackPanel
                    Grid.Row="2"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="30">
                    <Button x:ConnectionId='5'
                        x:Name="selectFilesBtn"
                                                    
                        Content="Select Files" />
                    <Button x:ConnectionId='6'
                        x:Name="SendFilesBtn"
                                                  
                        Content="Send" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            Grid.Column="1"
            Margin="40"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{StaticResource NavigationViewContentBackground}"
            CornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" VerticalAlignment="Stretch">
                    <TextBlock
                        Margin="10"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="RECEIVED FILES" />
                </StackPanel>

                <ListView x:ConnectionId='2'
                    x:Name="receivedFilesList"
                    Grid.Row="1"
                    VerticalAlignment="Stretch"
                    SelectionMode="None">
                    <custom:Item
                        Background="AliceBlue"
                        FileName="fileName.txt"
                        FileSize="389.7 MB"
                        value="20" />
                </ListView>


                <StackPanel
                    Grid.Row="2"
                    Margin="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
                    <Button x:ConnectionId='3'
                        x:Name="receiveFilesBtn"
                                                     
                        Content="Receive" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>

